<h1>Recent Posts</h1>

<% @posts.each do |post| %>
  <div class="post-card">
    <h2>
      <%= link_to post.title, post %>
    </h2>

    <p class="meta">
      by <%= post.user.email %> Â·
      <%= time_ago_in_words(post.created_at) %> ago
    </p>

    <p>
      <%= truncate(post.content, length: 150) %>
    </p>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= link_to "New Post", new_post_path, class: "button" %>
<% end %>
